@using (Html.BeginForm("RiskMgmtOrgSatisfaction", "BasicSurveyReport", FormMethod.Post, new { area = "", @class = "form-horizontal", role = "form", id = "mainForm" }))
{
    @Html.HiddenFor(model => model.SubmitType, new { @id = "submitType" })
    @Html.Hidden("BizWorkSn", ViewBag.paramModel.BizWorkSn as string)
    @Html.Hidden("CompSn", ViewBag.paramModel.CompSn as string)
    @Html.Hidden("BizWorkYear", ViewBag.paramModel.BizWorkYear as string)
    @Html.Hidden("QuestionSn", ViewBag.paramModel.QuestionSn as string)
    @Html.Hidden("Status", ViewBag.paramModel.Status as string)
    <div class="sub_report_checkbox">
        <div class="report_main_top2"></div>
        <div class="report_main_mid">
            <div class="main_mid_cont">
                <p class="title_mid">
                    Ⅱ. 기초역량검토 종합결과 _ <span class="small_span float_right">
                        역량별
                        검토결과
                    </span>
                </p>
            </div>
            <div class="main_mid_cont">
                <div class="main_mid_listBox">

                    <div class="listBox_tap longbg_on noline">
                        <span>(3)위험관리 역량</span>
                    </div>
                    <table class="join_info">
                        <colgroup>
                            <col width="20%">
                            <col width="20%">
                            <col width="60%">
                        </colgroup>
                        <tr>
                            <td class="left_memo">역량 검토 항목</td>
                            <td>
                                <span class="span_on">□ 기초역량 평가</span> <span class="span_weak">□ 재무지표 평가</span> <span class="span_weak">
                                    □
                                    전문가 평가
                                </span>
                            </td>
                            <td class="center_td">
                                <div class="label_td">기초역량</div> <span class="label_span"></span>
                            </td>
                        </tr>


                    </table>
                </div>

            </div>
            <div class="main_mid_cont">
                <p class="full_p">
                    <span class="big_span" style="margin: 0">[조직역량] 조직만족도 _</span><span class="small_span" style="margin: 0">종업원이 조직에 만족하는 정도</span>
                </p>
                <div class="explainBox">
                    <div class="label_ex">
                        <p class="ex_p bot_padding">
                            조직은 목표를 달성하기 위한 집합체입니다. 조직관리는 조직의 목표를 달성하고자 구성원 집단을 대상으로 명령과
                            의사결정을 하는 과정입니다.<br> 조직관리 과정에서 조직구성원의 욕구만족에 필요한 가치의 생산과
                            배분을 기초로 목표의 복잡성, 한계, 표준을 고려하여야 합니다.<br> 종업원의 조직에 대한 만족도
                            즉, 조직 만족도는 조직문화 형성과 조직의 경쟁력 결정에 중요한 요인이 됩니다.<br> 조직 만족도는
                            조직관여 또는 몰입으로 나타납니다. 이를 역으로 표현하면 조직만족도가 높을수록 이직률이 낮음을 의미합니다. <br>
                            조직만족도를 정성적으로 평가할 수도 있지만 여기에서는 이직률이라는 정량 단위로 평가합니다.<br>
                            이직율이 높은 회사는 중장기적으로 회사의 위험관리역량을 현저히 떨어뜨릴 수 있기 때문에 적극적으로 관리해야만
                            하는 지표로 겁토대상이 되었습니다.
                        </p>
                    </div>
                </div>
            </div>
            <div class="main_mid_cont">
                <div class="main_mid_listBox nomargin2">
                    <table class="capacity_table">
                        <colgroup>
                            <col width="12%">
                            <col width="13%">
                            <col width="15%">
                            <col width="15%">
                            <col width="15%">
                            <col width="15%">
                            <col width="15%">
                        </colgroup>
                        <tr>
                            <td class="left_memo ">구분</td>
                            <td class="left_memo">해당기업</td>
                            <td class="left_memo">
                                창업보육<br>단계 평균
                            </td>
                            <td class="left_memo">
                                보육성장<br> 단계 평균
                            </td>
                            <td class="left_memo">
                                자립성장<br> 단계 평균
                            </td>
                            <td class="left_memo">
                                참여<br>기업평균
                            </td>
                            <td class="left_memo">
                                전체<br>평균
                            </td>
                        </tr>
                        <tr>
                            <td class="center_td center">
                                조직만족도<br>(이직률)
                            </td>
                            <td class="center_td center">@Model.orgSatisfaction.Company (%)</td>
                            <td class="center_td center">@Model.orgSatisfaction.StartUpAvg (%)</td>
                            <td class="center_td center">@Model.orgSatisfaction.GrowthAvg (%)</td> 
                            <td class="center_td center">@Model.orgSatisfaction.IndependentAvg (%)</td>
                            <td class="center_td center">@Model.orgSatisfaction.BizInCompanyAvg (%)</td>
                            <td class="center_td center">@Model.orgSatisfaction.TotalAvg (%)</td>
                        </tr>

                    </table>
                </div>

            </div>
            <div class="main_mid_cont fix_bot list_print">
                <div class="main_mid_listBox nomargin2">
                    <div class="listBox_tap bg_on">
                        <span>검토결과</span>
                    </div>
                    @Html.TextAreaFor(model => model.CommentList[0].Comment, new { @id = "comment0", @class = "bot_textarea", @placeholder = "500자 내로 작성하시기 바랍니다." })
                    @Html.HiddenFor(model => model.CommentList[0].DetailCd)
                </div>

            </div>
        </div>
    </div>
    <!--container//-->
    <div id="btnwrap_sub" class="bottom_left2">

        <div class="rightwrap left">
            <a href="@Url.Action("RiskMgmtWorkingEnv", "BasicSurveyReport", new { area = "", BizWorkSn = ViewBag.paramModel.BizWorkSn, CompSn = ViewBag.paramModel.CompSn, BizWorkYear = ViewBag.paramModel.BizWorkYear, Status = ViewBag.paramModel.Status, QuestionSn = ViewBag.paramModel.QuestionSn })" class="pre left" value="이전"><em>이전</em></a>

        </div>
        <div class="rightwrap right">
            @if (ViewBag.paramModel.Status != "C")
            {
                <button type="button" class="next" onclick="goSubmit('N');" value="다음" />
            }
            else
            {
                <a href="@Url.Action("RiskMgmtITSystem", "BasicSurveyReport", new { area = "", BizWorkSn = ViewBag.paramModel.BizWorkSn, CompSn = ViewBag.paramModel.CompSn, BizWorkYear = ViewBag.paramModel.BizWorkYear, Status = ViewBag.paramModel.Status, QuestionSn = ViewBag.paramModel.QuestionSn })" class="next right" value="다음"><em>다음</em></a>
            }
        </div>
        @if (ViewBag.paramModel.Status != "C")
        {
            <div class="rightwrap centerwrap">
                <button type="button" class="write_save" onclick="goSubmit('T');" value="임시저장" />
            </div>
        }
    </div>
