@model BizOneShot.Light.Models.ViewModels.BasicSurveyReportViewModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!--@Styles.Render("~/css/print")-->

<link rel="stylesheet" href="~/css/print.css"/>

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz >  a.navi_report').addClass('on');
        //Cs menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_basicReport').addClass('on');
    });

    if (window.print) {
        document.write('<form><input type=button name=print value="Print" onClick="window.print()"></form>');
    }

</script>

<div id="sub_rightwrap_report">
    @Html.HiddenFor(model => model.QuestionSn, new { @id = "QuestionSn" })

    <div class="sub_right_title specialist_02_03">
        <em>기초경영역량 보고서</em>
    </div>
    <div id="sub_term_box">
        <span class="noti_fo">사업명 : @Model.BizWorkNm</span>
        <span class="noti_fo">년  도 : @Model.BizWorkYear</span>
        <span class="noti_fo">기업명 : @Model.CompNm</span>
            @if (Model.Status == "T")
            {
                <span class="noti_fo bold">작성상태 : 미작성</span>
            }
            else if (Model.Status == "P")
            {
                <span class="noti_fo bold">작성상태 : 작성중</span>
            }
            else
            {
                <span class="noti_fo bold">작성상태 : 작성완료</span>
            }
    </div>
    <div class="sub_report_checkbox">

        <div class="report_main_top">
            <div class="title big">
                @Model.CompNm<br>기초경영역량 진단 보고서
            </div>
        </div>
        <div class="report_main_mid">

            <table class="list_table top_w150">
                <colgroup>
                    <col width="30%">
                    <col width="70%">
                </colgroup>
                <tbody>
                    <tr>
                        <td rowspan="3" class="left_memo">Contents</td>
                        <td class="chapter">Ⅰ. 역량검토 결과 요약</td>
                    </tr>
                    <tr>
                        <td class="chapter">Ⅱ. 기초역량검토 종합결과</td>
                    </tr>
                    <tr>
                        <td class="chapter last_memo">Ⅲ. 성장 로드맵 제안</td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>
    <!--custom_rightwrap//-->
    <div id="btnwrap_sub" class="bottom_left2">
        <div class="rightwrap right">
          
            @if (Session[Global.UserType].Equals(Global.Company))
            {
                <a href="@Url.Action("BasicSurveyReport", "Report", new { area = "Company"})" class="list2 left" value="목록"><em>목록</em></a>
            }
            else if (Session[Global.UserType].Equals(Global.BizManager))
            {
                <a href="@Url.Action("BasicSurveyReport", "Report", new { area = "BizManager"})" class="list2 left" value="목록"><em>목록</em></a>
            }
            else if (Session[Global.UserType].Equals(Global.Mentor))
            {
                <a href="@Url.Action("BasicSurveyReport", "Report", new { area = "Mentor"})" class="list2 left" value="목록"><em>목록</em></a>
            }
            else if (Session[Global.UserType].Equals(Global.Expert))
            {
                <a href="@Url.Action("BasicSurveyReport", "Report", new { area = "Expert"})" class="list2 left" value="목록"><em>목록</em></a>
            }
            else if (Session[Global.UserType].Equals(Global.SysManager))
            {
                <a href="@Url.Action("BasicSurveyReport", "Report", new { area = "SysManager"})" class="list2 left" value="목록"><em>목록</em></a>
            }

            <button class="print" value="출력" onclick="location.href = '@Url.Action("print_03", "BasicSurveyReport", new { area = "" , BizWorkSn = Model.BizWorkSn, CompSn = Model.CompSn, BizWorkYear = Model.BizWorkYear, Status = Model.Status, QuestionSn = Model.QuestionSn})'"></button>
            @*<button class="print" value="출력" onclick="location.href='~/Views/BasicSurveyReport/print_03.html'" />*@
            @if(Model.Status == "T")
            { 
            <a href="@Url.Action("CompanyInfo", "BasicSurveyReport", new { area = "" , BizWorkSn = Model.BizWorkSn, CompSn = Model.CompSn, BizWorkYear = Model.BizWorkYear, Status = Model.Status, QuestionSn = Model.QuestionSn})" class="write_start right" value="작성"><em>작성</em></a>
            }
            else
            { 
            <a href="@Url.Action("CompanyInfo", "BasicSurveyReport", new { area = "" , BizWorkSn = Model.BizWorkSn, CompSn = Model.CompSn, BizWorkYear = Model.BizWorkYear, Status = Model.Status, QuestionSn = Model.QuestionSn})" class="next right" value="다음"><em>다음</em></a>
            }
            
        </div>
        
    </div>
</div>

