@model IPagedList<BizOneShot.Light.Models.ViewModels.DataRequstViewModels>

@{
    Layout = "~/Areas/Expert/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_expert01').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_SndData').addClass('on');

        $("#START_DATE,  #END_DATE").datepicker({
            showMonthAfterYear: true,
            yearSuffix: '년',
            monthNames: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월'],
            monthNamesShort: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월'],
            dayNamesMin: ['일', '월', '화', '수', '목', '금', '토'],
            dateFormat: 'yy-mm-dd'
        });
        $('#START_DATE').change(function () {
            var sDate = $('#START_DATE').val().split('-');
            var nsDate = new Date(sDate[0], sDate[1], sDate[2]).valueOf();

            var eDate = $('#END_DATE').val().split('-');
            var neDate = new Date(eDate[0], eDate[1], eDate[2]).valueOf();

            if (nsDate > neDate) {
                alert("시작날짜가 종료날짜 보다 큽니다.");
                return false;
            }
        });

        $('#END_DATE').change(function () {
            var sDate = $('#START_DATE').val().split('-');
            var nsDate = new Date(sDate[0], sDate[1], sDate[2]).valueOf();

            var eDate = $('#END_DATE').val().split('-');
            var neDate = new Date(eDate[0], eDate[1], eDate[2]).valueOf();

            if (nsDate > neDate) {
                alert("종료날짜가 시작날짜 보다 작습니다.");
                //$('#START_DATE').val($('#END_DATE').val());
                return false;
            }
        });
        $('.bt_calendar').on('click', function () {
            $(this).prev().focus();
            return false;
        });
    });

    function goPage(page) {
        $('#curPage').val(page);
        $('#searchForm').submit();
    }
</script>
@* 캘린더 처리를위해 추가한 JS 및 SCC *@
@Styles.Render("~/css/jquery-ui")
@Scripts.Render("~/bundles/jquery-ui")

<div id="sub_rightwrap">

    <div class="sub_right_title biz030301"><em>자료요청발신함</em></div>

    @using (Html.BeginForm("SendList", "CompanyMng", FormMethod.Post, new { area = "Expert", id = "searchForm" }))
    {
        <div class="tablewrap">
            <!--분류항목 귀속년도-->
            <table>
                <colgroup>
                    <col width="162px">
                    <col width="585px">
                </colgroup>
                <tr>
                    <th>기업명</th>
                    <td class="form">
                        @Html.TextBox("ComName", null, new { @class = "w326", @id = "ComName" })
                    </td>
                </tr>
                <tr>
                    <th>사업자번호</th>
                    <td class="form">
                        @Html.TextBox("RegistrationNo", null, new { @class = "w326", @id = "RegistrationNo" })
                    </td>
                </tr>
                <tr>
                    <th>요청일자</th>
                    <td class="form">
                        @Html.TextBox("START_DATE", (object)ViewBag.StartDate, new { @class = "w120", @id = "START_DATE", @readonly = "readonly" })
                        <a href="" class="bt_calendar"><em>날짜선택</em></a> ~
                        @Html.TextBox("END_DATE", (object)ViewBag.EndDate, new { @class = "w120", @id = "END_DATE", @readonly = "readonly" })
                        <a href="" class="bt_calendar"><em>날짜선택</em></a>
                    </td>

                </tr>
                <tr>
                    <th>답변여부</th>
                    <td class="form">
                        @Html.DropDownList("CheckYNList", ViewBag.SelectCheckYNList as SelectList, new { @class = "w130" })
                    </td>
                </tr>
            </table>
        </div><!--tablewrap//-->
        <div class="btnwrap center"><button type="submit" class="search2" value="검색"></button>	</div>
        @Html.Hidden("curPage", "1")
    }
    <div class="line_dot20"></div>

    <div class="tablewrap">
        <!--검색결과-->
        <p><a href="@Url.Action("RegSend","CompanyMng")" class="bt_newdata_require"><em>새 자료요청 보내기</em></a></p>
        <table>
            <colgroup>
                <col width="40%">
                <col width="16%">
                <col width="18%">
                <col width="13%">
                <col width="13%">
            </colgroup>
            <tr>
                <th class="topcen">제목</th>
                <th class="topcen">수신기업명</th>
                <th class="topcen">사업자번호</th>
                <th class="topcen">요청일자</th>
                <th class="topcen">답변일자</th>
            </tr>
            @if (Model == null || Model.TotalItemCount == 0)
            {
                <tr>
                    <td colspan="5" style="text-align:center;">검색 결과가 없습니다.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="center">
                            <span class="full_line">@Html.ActionLink(item.ReqSubject, "SendDetail", new { reqDocSn = item.ReqDocSn }, new { @style = "text-decoration:underline;" })</span>
                        </td>
                        <td class="center">@item.ReceiverComNm</td>
                        <td class="center">@item.ReceiverRegistrationNo</td>
                        <td class="center">@item.ReqDt.GetValueOrDefault().ToShortDateString()</td>
                        @if (item.ResDt == null)
                        {
                            <td></td>
                        }
                        else
                        {
                            <td class="center">@item.ResDt.GetValueOrDefault().ToShortDateString()</td>
                        }
                    </tr>
                }
            }
        </table>
    </div><!--tablewrap//-->
    @if (Model != null && Model.TotalItemCount != 0)
    {
        @Html.Pagination("goPage", Model.PageNumber, Model.PageCount, Model.HasPreviousPage, Model.HasNextPage)
    }
    <!--검색결과 끝-->

</div><!--custom_rightwrap//-->