@model BizOneShot.Light.Models.ViewModels.BizWorkViewModel

@{
    Layout = "~/Areas/BizManager/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_business06').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_MyInfo').addClass('on');
    });
</script>

<div id="sub_rightwrap">
    <div class="sub_right_title biz050101"><em>내정보관리</em></div>

    <div class="tablewrap">
        <table>
            <!--아이디-->
            <colgroup>
                <col width="160px" />
                <col width="587px" />
            </colgroup>
            <tr>
                <th>아이디</th>
                <td><span class="blue bold">@Model.LoginId</span></td>
            </tr>
        </table>
        <div class="line_dot10"></div>
        <table>
            <!--사업명-->
            <colgroup>
                <col width="160px" />
                <col width="587px" />
            </colgroup>
            <tr>
                <th>사업명</th>
                <td>@Model.BizWorkNm</td>
            </tr>
        </table>
        <div class="line_dot10"></div>
        <table>
            <!--사업자명 외-->
            <colgroup>
                <col width="160px" />
                <col width="590px" />
            </colgroup>
            <tr>
                <th>이름</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>소속부서</th>
                <td>@Model.DeptNm</td>
            </tr>
            <tr>
                <th>전화번호</th>
                <td>@Model.TelNo</td>
            </tr>
            <tr>
                <th>휴대폰</th>
                <td>@Model.MbNo</td>
            </tr>
            <tr>
                <th>FAX</th>
                <td>@Model.FaxNo</td>
            </tr>
            <tr>
                <th>이메일</th>
                <td>@Model.Email</td>
            </tr>
        </table>
        <div class="line_dot10"></div>
    </div><!--tablewrap//-->

    <div id="btnwrap_sub">
        <a href="@Url.Action("ModifyMyInfo","Main")" class="modify right"><em>수정</em></a>
    </div><!--btnwrap//-->

</div><!--sub_rightwrap//-->

