                <li><a href="@Url.Action("RegMentor","MentorMng",new { area= "BizManager" })" class="gnb gnb_regMentor">멘토 등록</a></li>
            }
            else if (ViewBag.LeftMenu == Global.Report)//보고서관리
            {
                <li class="title biz_report"><em>보고서</em></li>
                <li><a href="@Url.Action("BizInCompanyStats","Report",new { area= "BizManager" })" class="gnb gnb_bizInCompanyStats">참여기업 통계</a></li>
