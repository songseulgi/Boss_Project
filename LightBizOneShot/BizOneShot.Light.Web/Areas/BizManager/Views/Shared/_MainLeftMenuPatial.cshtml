            }
            else if (ViewBag.LeftMenu == Global.ComMng)//기업관리
            {
                <li class="title biz_company_manage"><em>기업관리</em></li>
                <li><a href="@Url.Action("CompanyList","CompanyMng")" class="gnb gbn_CompanyList">기업승인관리</a></li>
            }
            else if (ViewBag.LeftMenu == Global.MyInfo)//내정보 관리
            {
                <li class="title biz_myinfo"><em>내정보 관리</em></li>
                <li><a href="@Url.Action("MyInfo","Main",new { area= "BizManager" })" class="gnb gnb_MyInfo">내정보 관리</a></li>
                <li><a href="@Url.Action("ChangePassword","Account",new { area= "" })" class="gnb gnb_ChangePw">비밀번호 변경</a></li>
