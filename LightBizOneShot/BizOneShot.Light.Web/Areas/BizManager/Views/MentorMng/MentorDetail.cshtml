@model BizOneShot.Light.Models.ViewModels.JoinMentorViewModel
@using BizOneShot.Light.Models.ViewModels

@{
    Layout = "~/Areas/BizManager/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_business03').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_mentorList').addClass('on');
    });
</script>

<div id="sub_rightwrap">
    <div class="sub_right_title bizadmin_mento_detail"><em>멘토 상세보기</em></div>

    <form method="" action="" name="" id="">
        <div class="tablewrap">
            <table>
                <!--아이디-->
                <colgroup>
                    <col width="160px" />
                    <col width="587px" />
                </colgroup>
                <tr>
                    <th>아이디</th>
                    <td>@Model.LoginId</td>
                </tr>
            </table>
            <div class="line_dot10"></div>
            <table>
                <!--사업명-->
                <colgroup>
                    <col width="160px" />
                    <col width="587px" />
                </colgroup>
                <tr>
                    <th>사업명</th>
                    <td>@Model.BizWorkNm</td>
                </tr>
            </table>
            <div class="line_dot10"></div>
            <table>
                <!--기타 외-->
                <colgroup>
                    <col width="160px" />
                    <col width="590px" />
                </colgroup>
                <tr>
                    <th>이름</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>멘토링 분야</th>
                    @if (@Model.UsrTypeDetail == "T")
                    {
                        <td>세무회계</td>
                    }
                    else if (@Model.UsrTypeDetail == "L")
                    {
                        <td>법무</td>
                    }
                    else if (@Model.UsrTypeDetail == "W")
                    {
                        <td>노무</td>
                    }
                    else if (@Model.UsrTypeDetail == "P")
                    {
                        <td>특허</td>
                    }
                    else if (@Model.UsrTypeDetail == "M")
                    {
                        <td>마케팅</td>
                    }
                    else if (@Model.UsrTypeDetail == "F")
                    {
                        <td>자금</td>
                    }
                    else if (@Model.UsrTypeDetail == "D")
                    {
                        <td>기술개발</td>
                    }
                    else if (@Model.UsrTypeDetail == "E")
                    {
                        <td>기타</td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <th>전화번호</th>
                    <td>@Model.TelNo</td>
                </tr>
                <tr>
                    <th>휴대폰</th>
                    <td>@Model.MbNo</td>
                </tr>
                <tr>
                    <th>FAX</th>
                    <td>@Model.FaxNo</td>
                </tr>
                <tr>
                    <th>주소</th>
                    <td>(@Model.PostNo) @Model.Addr1 @Model.Addr2</td>
                </tr>
                <tr>
                    <th>이메일 주소</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>이력서</th>
                    <td colspan="4" class="nopad">
                        <div id="file_downwrap">
                            <ul>
                                <li>
                                    @if (string.IsNullOrEmpty(Model.ResumeName))
                                    {
                                        <span>이력서 없음</span>
                                    }
                                    else
                                    {
                                        <span><a href="@Url.Action("DownloadResumeFile", new FileInfoViewModel { FileNm = Model.ResumeName, FilePath = Model.ResumePath })" class="file_open">@Model.ResumeName</a></span>
                                    }
                                </li>
                            </ul>
                        </div>
                    </td>
                    @*<td><span class="vita">@Model.ResumeName</span></td>*@
                </tr>
            </table>
            <div class="line_dot10"></div>
            <table>
                <!--계좌번호-->
                <colgroup>
                    <col width="160px" />
                    <col width="587px" />
                </colgroup>
                <tr>
                    <th>계좌정보</th>
                    <td>@Model.BankNm @Model.AccountNo</td>
                </tr>
            </table>

        </div><!--tablewrap//-->


        <div id="btnwrap_sub">
            <a href="@Url.Action("MentorList","MentorMng")" class="list2 right"><em>목록</em></a>
        </div>
    </form>

</div><!--sub_rightwrap//-->