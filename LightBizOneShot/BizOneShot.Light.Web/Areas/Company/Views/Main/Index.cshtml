@model IEnumerable<BizOneShot.Light.Models.ViewModels.NoticeViewModel>

@{
    Layout = "~/Views/Shared/_JoinLayout.cshtml";
}


@if (TempData["alert"] != null)
{
    <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["alert"]));
        alert(message);
    </script>
}

<div class="company_main">
    <div class="container">
        <div id="main_cont5wrap">
            <a href="@Url.Action("FinanceMng","FinanceReport", new { area= "" })"><img src="../images/company_service01.png"></a><a href="@Url.Action("ReceiveList","ExpertService", new { area= "Company", expertType="T" })"><img src="../images/company_service02.png"></a><a href="@Url.Action("Notice","Cs", new { area= "" })"><img src="../images/company_service03.png"></a>
        </div><!--main_cont2wrap//-->
    </div>
</div>

<div id="main_biz_cont6wrap">

    <div id="main_biz_alertwrap">
        <!--알림창-->
        <p><span class="alert">공지사항</span><a href="@Url.Action("Notice", "Cs", new { area= "" })" class="more" alt="더보기"></a></p>
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("NoticeDetail", "Cs", new { area= "", noticeSn=item.NoticeSn})" class="list">@item.Subject</a><span class="date">@item.RegDt.Value.ToShortDateString()</span></li>
            }
            @if (Model.Count() == 0)
            {
                <li>공지사항이 없습니다.</li>
            }
        </ul>
    </div><!--biz_main_alertwrap//-->

    <div id="biz_main_bnnwrap">
        <!--banner-->
        <a href="@Url.Action("BasicSurvey","Report",new { area= "Company" })" class="interviewsheet"><em>기초경양전략 문진표작성</em></a>
        <a href="http://me2.do/GcgjeEpB" target=_blank class="download08"><em>프로그램 다운로드</em></a>
    </div><!--banner//-->

</div><!--main_biz_cont2wrap//-->