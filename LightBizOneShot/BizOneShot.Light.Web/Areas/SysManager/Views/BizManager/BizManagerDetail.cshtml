@model BizOneShot.Light.Models.ViewModels.JoinCompanyViewModel

@{
    Layout = "~/Areas/SysManager/Views/Shared/_MainLayout.cshtml";
}
<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_scpadmin04').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_bizMng').addClass('on');
    });
</script>

<div id="sub_rightwrap">
    <div class="sub_right_title scpadmin_04_02"><em>소속그룹 상세보기</em></div>
    <p>사업관리 기관을 등록하고 담당자 아이디와 비밀번호를 부여합니다.</p>
    <p>&nbsp;</p>
    <div class="tablewrap">
        <table>
            <!--아이디-->
            <colgroup>
                <col width="160px" />
                <col width="587px" />
            </colgroup>
            <tr>
                <th>사업관리기관명</th>
                <td>@Model.CompNm</td>
            </tr>
        </table>
        <div class="line_dot20"></div>
        <p class="cap_title">담당자</p>
        <table>
            <!--사업자명 외-->
            <colgroup>
                <col width="160px" />
                <col width="590px" />
            </colgroup>
            <tr>
                <th>담당자명</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>전화번호</th>
                <td>@Model.TelNo1 - @Model.TelNo2 - @Model.TelNo3</td>
            </tr>
            <tr>
                <th>FAX</th>
                <td>@Model.FaxNo1 - @Model.FaxNo2 - @Model.FaxNo3</td>
            </tr>
            <tr>
                <th>휴대폰</th>
                <td>@Model.MbNo1 - @Model.MbNo2 - @Model.MbNo3</td>
            </tr>
            <tr>
                <th>이메일</th>
                <td>@Model.Email1@@@Model.Email2</td>
            </tr>
        </table>
        <div class="line_dot10"></div>
        <table>
            <colgroup>
                <col width="160px" />
                <col width="587px" />
            </colgroup>
            <tr>
                <th>아이디(ID)</th>
                <td>@Model.LoginId</td>
            </tr>
        </table>
    </div><!--tablewrap//-->
    <div id="btnwrap_sub">
        <a href="@Url.Action("BizManager","BizManager")" class="list2 right"><em>목록</em></a>
        @*<a href="" class="modify left"><em>수정</em></a>*@
    </div><!--btnwrap//-->

</div><!--sub_rightwrap//-->